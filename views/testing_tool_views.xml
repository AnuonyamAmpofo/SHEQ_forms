<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_testing_tool_list" model="ir.ui.view">
        <field name="name">testing.tool.list</field>
        <field name="model">testing.tool</field>
        <field name="arch" type="xml">
            <list string="Testing Tools">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="model"/>
                <field name="condition"/>
                <field name="last_calibration_date"/>
                <field name="next_calibration_date"/>
            </list>
        </field>
    </record>


    <record id="view_testing_tool_form" model="ir.ui.view">
        <field name="name">testing.tool.form</field>
        <field name="model">testing.tool</field>
        <field name="arch" type="xml">
            <form string="Testing Tool">
                <sheet>
                     <div class="oe_title">
                            <h1>Testing Tool Inventory</h1>
                        </div>

                    <separator/>

                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="model"/>
                            <field name="serial_number" required="1"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="condition"/>
                            <field name="last_calibration_date" required="1"/>
                            <field name="next_calibration_date" required="1"/>
                        </group>
                    </group>
                    
                    <separator/>

                    <group string="File Summary" colspan="2">
                        <group>
                            <field name="folder_size_kb" string="Total Size (KB)" readonly="1"/>
                            <field name="last_modified_file" readonly="1"/>
                        </group>
                        <group>
                            <field name="file_type" readonly="1"/>
                        </group>
                    </group>

                   
                    <notebook>

                        <page string="Files">
                            <group>
                                <field name="attachment_ids" 
                                       widget="many2many_binary" 
                                       string="Upload Files"
                                       context="{'default_res_model': 'testing.tool', 'default_res_id': id}"
                                       colspan="4"/>
                            </group>
                            
                            
                            <group string="File Details" colspan="4">
                                <field name="attachment_ids" colspan="4">
                                    <list editable="bottom" 
                                          create="0" 
                                          delete="0" 
                                          string="Attached Files"
                                          default_order="create_date desc">
                                        <field name="name" string="File Name"/>
                                        <field name="datas" filename="name" string="File" readonly="1" widget="binary"/>
                                        <field name="file_size" string="Size (Bytes)"/>
                                        <field name="mimetype" string="File Type"/>
                                        <field name="create_date" string="Uploaded Date"/> <field name="write_date" string="Last Modified"/> <button name="unlink" type="object" string="Remove" class="btn-danger"/> </list> </field> </group>
                        </page>


                        <page string="Notes">
                            <group colspan="4">
                                <field name="notes" nolabel="1" placeholder="Enter your notes here..." style="height: 300px;"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                

                <footer>
                    <button name="action_remove_all_attachments" string="Remove All Files" type="object" class="btn-danger"/>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <div class="oe_right">
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    </div>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_testing_tool_search" model="ir.ui.view">
        <field name="name">testing.tool.search</field>
        <field name="model">testing.tool</field>
        <field name="arch" type="xml">
            <search string="Testing Tools">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="model"/>
                <field name="condition"/>
                <group expand="0" string="Group By">
                    <filter string="Condition" name="group_by_condition" context="{'group_by': 'condition'}"/>
                    <filter string="Model" name="group_by_model" context="{'group_by': 'model'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_testing_tool" model="ir.actions.act_window">
        <field name="name">Testing Tools</field>
        <field name="res_model">testing.tool</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first testing tool!
            </p>
        </field>
    </record>


</odoo>