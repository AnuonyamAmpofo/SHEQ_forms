<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sheq_audit_form" model="ir.ui.view">
            <field name="name">sheq.audit.form</field>
            <field name="model">sheq.audit</field>
            <field name="arch" type="xml">
                <form string="SHEQ Audit Form">
                    <header>
                        <button name="action_save" string="Save" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </header>
                    
                    <sheet>

                        <div class="oe_title">
                            <h1>SHEQ Audit Form</h1>
                        </div>
                        

                        <group string="Primary Information">
                            <group>
                                <field name="title" placeholder="Enter title..."/>
                            
                                <field name="auditor" placeholder="Calibration Specialist"/>


                                <field name="lead_auditor" placeholder="Type then tab"/>
                            </group>
                            <group>
                                <field name="auditee" placeholder="Type then tab"/>
                                <field name="department" placeholder="Select department..."/>
                                <field name="subsidiary" readonly="1"/>
                            </group>
                        </group>

                        <separator/>
                        

                        <group string="Details">
                            <group>
                                <field name="audit_type" />
                                <field name="audit_area" placeholder="Enter audit area..."/>
                                <field name="audit_start_time" placeholder="HH:MM"/>
                                <field name="audit_id" readonly="1"/>

                            </group>
                            <group>
                                <field name="audit_end_time" placeholder="HH:MM"/>
                                <field name="audit_date"/>
                                <field name="audit_venue" placeholder="Enter venue..."/>
                                <field name="audit_status" readonly="1" options="{'horizontal': true}"/>
                            </group>
                        </group>
                        

                    <separator/>

                        

                   
                    <notebook>

                        <page string="Files">
                            <group>
                                <field name="attachment_ids" 
                                       widget="many2many_binary" 
                                       string="Upload Files"
                                       context="{'default_res_model': 'testing.tool', 'default_res_id': id}"
                                       colspan="4"/>
                            </group>
                            
                            
                            <group string="File Details" colspan="4">
                                <field name="attachment_ids" colspan="4">
                                    <list editable="bottom" 
                                          create="0" 
                                          delete="0" 
                                          string="Attached Files"
                                          default_order="create_date desc">
                                        <field name="name" string="File Name"/>
                                        <field name="datas" filename="name" string="File" readonly="1" widget="binary"/>
                                        <field name="file_size" string="Size (Bytes)"/>
                                        <field name="mimetype" string="File Type"/>
                                        <field name="create_date" string="Uploaded Date"/>
                                        <field name="write_date" string="Last Modified"/>
                                        <button name="unlink" type="object" string="Remove" class="btn-danger"/>
                                    </list>
                                </field>
                            </group>
                        </page>


                        <page string="Notes">
                            <group colspan="4">
                                <field name="notes" nolabel="1" placeholder="Enter your notes here..." style="height: 300px;"/>
                            </group>
                        </page>
                    </notebook>
                       
                    </sheet>
                </form>
            </field>
        </record>
        

        <record id="view_sheq_audit_tree" model="ir.ui.view">
            <field name="name">sheq.audit.list</field>
            <field name="model">sheq.audit</field>
            <field name="arch" type="xml">
                <list string="SHEQ Audits">
                    <field name="audit_id"/>
                    <field name="title"/>
                    <field name="auditor"/>
                    <field name="audit_date"/>
                    <field name="audit_status" widget="badge"/>
                </list>
            </field>
        </record>
        

        <record id="view_sheq_audit_search" model="ir.ui.view">
            <field name="name">sheq.audit.search</field>
            <field name="model">sheq.audit</field>
            <field name="arch" type="xml">
                <search string="Search SHEQ Audits">
                    <field name="audit_id"/>
                    <field name="title"/>
                    <field name="auditor"/>
                    <filter string="Open Audits" name="open" domain="[('audit_status', '=', 'open')]"/>
                    <filter string="My Audits" name="my_audits" domain="[('create_uid', '=', uid)]"/>
                </search>
            </field>
        </record>
        

        <record id="action_sheq_audit" model="ir.actions.act_window">
            <field name="name">SHEQ Audits</field>
            <field name="res_model">sheq.audit</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SHEQ Audit
                </p>
            </field>
        </record>
        

    </data>
</odoo>